<% include ../common/header.ejs %>

<div class = "wrapper">
	<div class= "topic-box">
		<h1> Sidonia Template Forum </h1>
		<br>
		<table class="table table-striped">
			<tbody>
				<tr>
					<td>
						<h3>Forum Name</h3>
						
					</td>
					<td>
						<h3>Description</h3>
						
					</td>
					<td>
						<h3>Views</h3>
						
					</td>
					<td>
						<h3>Replies</h3>
					</td>
				</tr>
  				<% for(var i = 0; i < forums.length; i++) { %>
  				<tr>
					<td> <a href="forum/<%= forums[i]._id %>"> <%= forums[i].title %>  </a> </td>
					<td> <%= forums[i].description %> </td>
					<td> <%= forums[i].user %> </td>
					<td> </td>
				</tr>
				<% } %>

				<tr>
					<td>
					<% if (request.user) { %> 
						<a href="/forums/new"><h3> Create new Forum </h3> </a> 
					<% } %>
					</td>
					
				</tr>
			</tbody>
		</table>
	</div>

